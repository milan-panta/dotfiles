# shortcuts for opening apps
lcmd - return : open -a Ghostty
rcmd - k : open -a Ghostty
shift + cmd - k : open -na Ghostty
rcmd - u : open -a "Zen Browser"
rcmd - v : open -a "Visual Studio Code"
shift + cmd - u : open -a "Zen Browser"
rcmd - b : open -a Messages
rcmd - i : open -a IINA
rcmd - o : open -a Obsidian
rcmd - c : open -a "Notion Calendar"
rcmd - n : open -a Notion
rcmd - s : open -a Spotify
rcmd - d : open -a Discord
rcmd - m : open -a Mail
rcmd - t : open -a TickTick

# restart yabai hotkey
ctrl + alt + cmd - r : yabai --restart-service

# focus window
lalt - h : yabai -m window --focus west
lalt - k : yabai -m window --focus north
lalt - l : yabai -m window --focus east
lalt - j : yabai -m window --focus south

# window oapcity
lalt + ctrl - t : yabai -m window --opacity 0.88
lalt + ctrl - o : yabai -m window --opacity 1.0

# rotate layout clockwise
lalt - r : yabai -m space --rotate 270

# flip along y-axis
lalt - y : yabai -m space --mirror y-axis

# flip along x-axis
lalt - x : yabai -m space --mirror x-axis

# toggle window float
lalt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle sticky (pip)
shift + lalt - p : yabai -m window --toggle sticky

# maximize window
lalt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
lalt - e : yabai -m space --balance

# Fast focus spaces
lalt - 1 : yabai -m space --focus 1
lalt - 2 : yabai -m space --focus 2
lalt - 3 : yabai -m space --focus 3
lalt - 4 : yabai -m space --focus 4
lalt - 5 : yabai -m space --focus 5
lalt - 6 : yabai -m space --focus 6
lalt - 7 : yabai -m space --focus 7
lalt - 8 : yabai -m space --focus 8
lalt - 9 : yabai -m space --focus 9

# Move window to space and focus space
lalt + shift - 1 : yabai -m window --space 1 --focus
lalt + shift - 2 : yabai -m window --space 2 --focus
lalt + shift - 3 : yabai -m window --space 3 --focus
lalt + shift - 4 : yabai -m window --space 4 --focus
lalt + shift - 5 : yabai -m window --space 5 --focus
lalt + shift - 6 : yabai -m window --space 6 --focus
lalt + shift - 7 : yabai -m window --space 7 --focus
lalt + shift - 8 : yabai -m window --space 8 --focus
lalt + shift - 9 : yabai -m window --space 9 --focus

# focus monitor
lcmd + shift - l  : yabai -m display --focus prev
lcmd + shift - h  : yabai -m display --focus next

# send window to monitor and follow focus
ctrl + lcmd - l  : yabai -m window --display prev; yabai -m display --focus prev
ctrl + lcmd - h  : yabai -m window --display next; yabai -m display --focus next

# swap windows
shift + lalt - j : yabai -m window --swap south
shift + lalt - k : yabai -m window --swap north
shift + lalt - h : yabai -m window --swap west
shift + lalt - l : yabai -m window --swap east

# swap windows and split
ctrl + lalt - j : yabai -m window --warp south
ctrl + lalt - k : yabai -m window --warp north
ctrl + lalt - h : yabai -m window --warp west
ctrl + lalt - l : yabai -m window --warp east

# move window
shift + lalt - a : yabai -m window --move rel:-20:0
shift + lalt - s : yabai -m window --move rel:0:20
shift + lalt - w : yabai -m window --move rel:0:-20
shift + lalt - d : yabai -m window --move rel:20:0

# resize windows
lalt - a : yabai -m window --resize right:-20:0 2> /dev/null || yabai -m window --resize left:-20:0 2> /dev/null
lalt - s : yabai -m window --resize bottom:0:20 2> /dev/null || yabai -m window --resize top:0:20 2> /dev/null
lalt - d : yabai -m window --resize bottom:0:-20 2> /dev/null || yabai -m window --resize top:0:-20 2> /dev/null
lalt - f : yabai -m window --resize right:20:0 2> /dev/null || yabai -m window --resize left:20:0 2> /dev/null
